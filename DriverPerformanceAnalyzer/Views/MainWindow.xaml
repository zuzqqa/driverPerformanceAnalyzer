<Window x:Class="DriverPerformanceAnalyzer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Track Interpolation" Height="350" Width="500">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Inner Boundary File:" />
            <TextBox Text="{Binding InnerPath, Mode=TwoWay}" IsReadOnly="True"/>
            <TextBlock Text="Outer Boundary File:" />
            <TextBox Text="{Binding OuterPath, Mode=TwoWay}" IsReadOnly="True"/>
            <Button Content="Choose Files" Click="ChooseFiles_Click" Margin="0,10,0,0"/>
            <Button Content="Interpolate" Click="Interpolate_Click" Margin="0,10,0,0"/>
            <oxy:PlotView x:Name="PlotView" Model="{Binding PlotModel}" Height="165" RenderTransformOrigin="0.577,0.488" />
        </StackPanel>
    </Grid>
</Window>
